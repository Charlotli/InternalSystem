            $('#btnSubmit').click(function () {
                var filed = new Object();
                var isVer = true;
                $('input').each(function (one) {
                    var $that = $(this);
                    var name = $that.attr('name');
                    var val = $that.val();
                    if (!val) {
                        $('html,.layui-fluid').animate({
                            scrollTop: $that.offset().top - 150
                        }, 100, function () {
                            layer.tips('必填项不能为空', $that, {
                                tips: [2, '#ff4c4c']
                            });
                        });
                        isVer = false;
                        return false;
                    }
                    filed[name] = val;
                });
                if (isVer) {
                    layer.msg(JSON.stringify(filed));
                }
            });


